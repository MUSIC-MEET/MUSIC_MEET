<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        tools:context=".FindMusicActivity">

    <ImageView
            android:id="@+id/findserchImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/magnifier"
            app:layout_constraintStart_toStartOf="@+id/findautoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintTop_toTopOf="@+id/findautoTextView"
            app:layout_constraintBottom_toBottomOf="@+id/findautoTextView"
            app:layout_constraintVertical_bias="1.0"/>

    <AutoCompleteTextView
            android:id="@+id/findautoTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/auto_music_radius"
            android:completionThreshold="1"
            android:completionHint="검색결과"
            android:hint="검색할 음악을 입력하세요"
            android:inputType="textAutoComplete"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.005"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시팔!"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:id="@+id/s"
            app:layout_constraintTop_toBottomOf="@+id/findautoTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>